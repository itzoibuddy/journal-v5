@echo off
echo Deploying to Vercel...

echo Checking if prisma/schema.prisma exists...
if not exist prisma\schema.prisma (
    echo Creating prisma directory...
    mkdir prisma 2>nul
    echo Copying schema.prisma to prisma directory...
    copy schema.prisma prisma\schema.prisma
)

echo Creating migrations directory if it doesn't exist...
mkdir prisma\migrations 2>nul

echo Creating migration_lock.toml if it doesn't exist...
echo # Please do not edit this file manually > prisma\migrations\migration_lock.toml
echo provider = "postgresql" >> prisma\migrations\migration_lock.toml

echo Deploying to Vercel...
vercel --prod

echo Deployment process completed! 